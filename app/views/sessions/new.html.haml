- title t('.login', :default => 'Log in')

- form_tag session_path do
  %fieldset.inputs
    %ol
      %li{:id => 'email_input'}
        = label_tag :email, t('.email', :default => 'Email')
        = text_field_tag :email, @email, :autocomplete => 'on'

      %li{:id => 'password_input'}
        = label_tag :password, t('.password', :default => 'Password')
        = password_field_tag :password, nil, :autocomplete => 'off'

      %li{:id => 'remember_me_input'}
        = label_tag :remember_me, t('.remember_me', :default => 'Remember me')
        = check_box_tag :remember_me, '1', @remember_me

  %li{:class => 'commit'}
    = submit_tag t('.login', :default => 'Log in')
    /%span.forgot_password
    /  = link_to t('.forgot_password', :default => 'Forgot your password?'), forgot_password_path